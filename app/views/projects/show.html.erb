<div class="page-header">
  <div class="container-fluid">
    <div class="btn-group pull-right">
      <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
        Действия
        <span class="caret"></span>
      </button>
      <ul class="dropdown-menu">
        <li><%= link_to 'Настройки', edit_project_path(@project) %></li>
      </ul>
    </div>
    <h1>
      <%= @project.title %>
      <small>
        <%= @project.description %>
      </small>
    </h1>
    <% if @project.is_finished == true %>
      <span class="label label-success">Проект завершен</span>
    <% else %>
      <span class="label label-warning">Проект не завершен</span>
    <% end %>
  </div>
</div>

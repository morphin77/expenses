<div class="page-header">
  <div class="container-fluid">
    <div class="btn-group pull-right">
      <%= link_to 'Новый', new_contractor_path, class: "btn btn-lg btn-primary" %>
    </div>
    <h1>Контрагенты</h1>
  </div>
</div>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Title</th>
      <th>Address</th>
      <th>Phone</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contractors.each do |contractor| %>
      <tr>
        <td><%= contractor.title %></td>
        <td><%= contractor.address %></td>
        <td><%= link_to 'Show', contractor %></td>
        <td><%= link_to 'Edit', edit_contractor_path(contractor) %></td>
        <td><%= link_to 'Destroy', contractor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= f.text_field :service, id: :account_item_service, class: 'form-control', placeholder: 'Услуга' %>
<%= f.select :contractor_id, {}, {prompt: 'Контрагент'}, {class: 'form-control'} do %>
  <% @contractors.each do |contractor| -%>
    <%= content_tag(:option, contractor.title, value: contractor.id) %>
  <% end %>
<% end %>
<%= f.text_field :amount, id: :account_item_amount, class: 'form-control', placeholder: 'Стоимость' %>
<%= f.label "Дата оплаты" %>
<%= f.date_select :date, id: :account_item_date, class: 'form-control' %>
